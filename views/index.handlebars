<h1>Eat-Da-Burger!</h1>

<div id='ready'>

<h2> Devoured!</h2>
  <ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger-block devoured=false}}
    {{/unless}}
    {{/each}}
  </ul>
</div>
<div id='devoured'>

<h2>Burgers that have been Eatin</h2>

  <ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block devoured=true}}
    {{/if}}
    {{/each}}
  </ul>
</div>


<div id="add">
  <form class="create-form">

    <div class="form-group">
      <label for="burg">Burger Type:</label>
      <input type="text" id="burg" name="burger_name">
      <button class="btn btn-primary" type="submit">Add Burger</button>
    </div>
  </form>
</div>